<section class="container my-5">
    <h1 class="mb-4 text-center">Manage Vehicles</h1>

    <div class="text-end mb-4">
        <a href="/admin/vehicles/add" class="btn btn-success rounded-pill">
            <i class="fas fa-plus-circle"></i> Add New Vehicle
        </a>
    </div>

    <% if (vehicles && vehicles.length > 0) { %>
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Image</th>
                        <th scope="col">Name</th>
                        <th scope="col">Brand</th>
                        <th scope="col">Type</th>
                        <th scope="col">Price</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% vehicles.forEach(vehicle => { %>
                        <tr>
                            <td>
                                <img src="<%= vehicle.image %>" alt="<%= vehicle.name %>" style="width: 60px; height: 60px; object-fit: cover; border-radius: 5px;">
                            </td>
                            <td><%= vehicle.name %></td>
                            <td><%= vehicle.brand %></td>
                            <td><%= vehicle.type %></td>
                            <td>$<%= vehicle.price.toFixed(2) %></td>
                            <td>
                                <a href="/admin/vehicles/edit/<%= vehicle._id %>" class="btn btn-sm btn-info me-2 rounded-pill" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form action="/admin/vehicles/delete/<%= vehicle._id %>" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-danger rounded-pill" onclick="return confirm('Are you sure you want to delete <%= vehicle.name %>?')" title="Delete">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    <% } else { %>
        <div class="alert alert-info text-center" role="alert">
            No vehicles found. Please add some!
        </div>
    <% } %>
</section>
