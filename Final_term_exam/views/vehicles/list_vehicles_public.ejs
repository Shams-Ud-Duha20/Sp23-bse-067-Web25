<section class="container my-5">
    <h1 class="mb-4 text-center">Our Vehicles</h1>
    <p class="text-center">Browse our impressive collection of vehicles.</p>

    <% if (errors && errors.length > 0) { %>
        <div class="alert alert-danger" role="alert">
            <ul>
                <% errors.forEach(error => { %>
                    <li><%= error %></li>
                <% }); %>
            </ul>
        </div>
    <% } %>

    <% if (vehicles && vehicles.length > 0) { %>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <% vehicles.forEach(vehicle => { %>
                <div class="col">
                    <div class="card h-100 shadow-sm rounded-lg">
                        <img src="<%= vehicle.image %>" class="card-img-top rounded-top" alt="<%= vehicle.name %>" style="height: 200px; object-fit: cover;">
                        <div class="card-body text-center">
                            <h5 class="card-title mb-1"><%= vehicle.name %></h5>
                            <p class="card-text text-muted mb-2"><%= vehicle.brand %> - <%= vehicle.type %></p>
                            <p class="card-text fw-bold fs-4">$<%= vehicle.price.toFixed(2) %></p>
                            {/* You could add an "Add to Cart" button here for vehicles too, if needed later */}
                            {/* <form action="/cart/add" method="POST" class="mt-3">
                                <input type="hidden" name="productId" value="<%= vehicle._id %>">
                                <input type="hidden" name="name" value="<%= vehicle.name %>">
                                <input type="hidden" name="price" value="<%= vehicle.price %>">
                                <input type="hidden" name="imageUrl" value="<%= vehicle.image %>">
                                <button type="submit" class="btn btn-dark btn-sm rounded-pill px-3">Add to Cart</button>
                            </form> */}
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <div class="alert alert-info text-center mt-4" role="alert">
            No vehicles are available at the moment. Please check back later!
        </div>
    <% } %>
</section>
