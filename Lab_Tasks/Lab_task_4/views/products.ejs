<section class="container my-5">
    <h1 class="mb-4 text-center">All Products</h1>
    <p class="text-center">Discover our latest collections and timeless pieces.</p>

    <div class="row">
        <% products.forEach(productSet => { %>
            <% productSet.items.forEach(item => { %>
                <div class="col-md-3 col-6 mb-4">
                    <div class="card h-100 shadow-sm rounded-lg">
                        <img src="<%= item.image %>" class="card-img-top rounded-top" alt="<%= item.name %>">
                        <div class="card-body text-center">
                            <h5 class="card-title mb-1"><%= item.name %></h5>
                            <p class="card-text text-muted mb-2"><%= item.series %></p>
                            <p class="card-text fw-bold">$<%= item.price.toFixed(2) %></p>
                            <!-- Add to Cart Form -->
                            <form action="/cart/add" method="POST" class="mt-3">
                                <input type="hidden" name="productId" value="<%= item.productId %>">
                                <input type="hidden" name="name" value="<%= item.name %>">
                                <input type="hidden" name="price" value="<%= item.price %>">
                                <input type="hidden" name="imageUrl" value="<%= item.image %>">
                                <button type="submit" class="btn btn-dark btn-sm rounded-pill px-3">Add to Cart</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% }); %>
    </div>
</section>
